<%- include('header'); -%>
<body>
  <div class="container-fluid">
    <!-- first back button -->
    <div class="row justify-content-center" id="back-button">
      <section class="col-12 col-md-4">
        <a href="/login"><span class="bi bi-arrow-left"></span></a>
      </section>
    </div>
    <br />
    <!-- app logo -->
    <div class="row justify-content-center" id="app-logo">
      <img
        src="/images/user-account-color.jpg"
        alt="user-account-img"
        style="width: 130px; height: 110px"
      />
    </div>
    <div class="row text-center justify-content-center" id="app-logo">
      <section class="col-12 col-md-4">
        <span>
          <br />
          <h2 class="display-5">Welcome!</h2>
          <p class="lead">
            Sign up and create an account with your email and password to use
            Little Nugget
          </p>
        </span>
      </section>
    </div>
    <div class="row justify-content-center" id="signup-details">
      <section class="col-12 col-md-4">
        <form action="/accounts/sign-up" method="POST">
          <!-- signup email -->
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Email"
            required
          />
          <br />
          <!-- signup password -->
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
          <br />
          <!-- first name -->
          <input
            type="text"
            class="form-control"
            id="first_name"
            name="first_name"
            placeholder="First Name"
            required
          />
          <br />
          <!-- last name -->
          <input
            type="text"
            class="form-control"
            id="last_name"
            name="last_name"
            placeholder="Last Name"
            required
          />
          <br />
          <!-- signup button -->
          <button type="submit" class="btn btn-primary btn-lg w-100">
            Create Account
          </button>
        </form>
      </section>
    </div>
  </div>
</body>
<%- include('footer'); -%>
